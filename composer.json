{
    "name": "galahadxvi/amazon-product-api-php",
    "description": "A lightweight PHP package for Amazon Product Advertising API 5.0",
    "type": "library",
    "license": "MIT",
    "author": "GalahadXVI",
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "GalahadXVI\\AmazonProductApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GalahadXVI\\AmazonProductApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "stable"
}