{
    "name": "galahadxvi/amazon-advertising-api-php",
    "description": "A lightweight PHP package for Amazon Product Advertising API 5.0",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Custom",
            "email": "info@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Custom\\AmazonAdvertisingApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Custom\\AmazonAdvertisingApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "stable"
}